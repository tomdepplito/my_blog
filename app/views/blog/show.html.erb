<div class = 'container'>
  <%= render '/shared/icons' %>
  <div class = 'twelve columns'>
    <div class = 'container'>
      <div class = 'hideable'>
        <div class = 'five columns'>
          <div id = 'nav1'>
            <%= link_to "Previous", blog_navigate(@blog.id, 'previous') %>
          </div>
        </div>
        <div class = 'five columns'>
          <div id = 'nav2'>
            <%= link_to "Home", root_path %>
          </div>
        </div>
        <div class = 'five columns'>
          <div id = 'nav3'>
            <%= link_to "Next", blog_navigate(@blog.id, 'next') %>
          </div>
        </div>
      </div>
    </div>
    <div class = 'top-container'>
      <div class = 'container'>
        <div class = "eleven columns alpha">
          <h1><%= @blog.title %></h1>
        </div>
        <div class = 'one column omega'>
          <%= render 'layouts/tweet_button' %>
        </div>
      </div>
    </div>

    <div class = 'container'>
      <div class = 'date'>
        <p>
          <%= date(@blog.created_at) %>
        </p>
      </div>
      <div class = 'content'>
        <%= @blog.body.html_safe %>
      </div>
    </div>

    <div class = 'container'>
      <div id="disqus_thread"></div>
      <script type="text/javascript">
        /* * * CONFIGURATION VARIABLES: EDIT BEFORE PASTING INTO YOUR WEBPAGE * * */
        var disqus_shortname = 'tomdepplito'; // required: replace example with your forum shortname

        /* * * DON'T EDIT BELOW THIS LINE * * */
        (function() {
            var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
            dsq.src = '//' + disqus_shortname + '.disqus.com/embed.js';
            (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
        })();
      </script>
      <noscript>Please enable JavaScript to view the <a href="http://disqus.com/?ref_noscript">comments powered by Disqus.</a></noscript>
    </div>
  </div>
</div>
